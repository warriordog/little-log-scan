{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": [ "ES2021" ],
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,

    "outDir": "./dist/package",
    "sourceMap": true,
    "inlineSources": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "declaration": true,

    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}